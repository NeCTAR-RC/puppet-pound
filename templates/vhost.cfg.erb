#################### VHOST <%= name %> #######################################

<%=listen_protocol%>
    Address 0.0.0.0
    Port <%= port %>

    <% if listen_protocol == "ListenHTTPS"%>
    Cert "<%= ssl_combined_path %>"
    <% end %>

    ## allow other HTTP verbs
    xHTTP	    2

    Service
        BackEnd
            Address <%= backend_ip %>
            Port <%= backend_port %>
        End
        <% if emergency_ip %>
        Emergency
	    Address <%= emergency_ip %>
	    Port <%= emergency_port %>
        End
        <% end %>  
    End
End
